mixin user(users)
    h3 Nutzerverwaltung
    .row
        .col-md-10.col-xs-12.mt-2
            input.form-control#search(placeholder="search" type="text")
        .d-grid.col-md-2.col-sm-12.mt-2
            button.btn.btn-primary.btn-block#search_btn(type="submit") Search
    #user
        each user in users
            .row.rounded.mt-2.border-dark.border.user(id=user._id)
                .col-md-4.col-sm-6
                    p.salutation #{user.salutation}
                    p
                        span.firstName #{user.firstName}
                        br
                        span.lastName #{user.lastName}
                .col-md-4.col-sm-6.border-start.border-dark.mt-3.mb-3
                    p.email #{user.email}
                    select.form-control.role(id="select_"+user._id)
                        if user.role === 'worker'
                            option(value="user") Nutzer
                            option(value="worker" selected) Mitarbeiter
                            option(value="admin") Admin
                        else if user.role === 'admin'
                            option(value="user") Nutzer
                            option(value="worker") Mitarbeiter
                            option(value="admin" selected) Admin
                        else
                            option(value="user" selected) Nutzer
                            option(value="worker") Mitarbeiter
                            option(value="admin") Admin
                .col-md-4.col-sm-12.d-grid.gap-2.mt-2.mb-2
                    button.btn.btn-block.btn-outline-secondary(id="clean_"+user._id name="clean") Clean History
                    button.btn.btn-block.btn-secondary(id="delete_"+user._id name="delete") LÃ¶schen
                    button.btn.btn-block.btn-primary(id="update_"+user._id name="update") Updaten
    script(src="/javascript/user.js")