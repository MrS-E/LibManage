mixin ausgeliehen(books)
    h3 Ausgeliehen
    table.table.table-hover.table-condensed
        thead
            th
                td Bild
                td Titel
                td Autor
                td Verlag
                td ISBN
                td Tools
        tbody
            each book in books
                tr
                    td
                    td
                        if book.img
                            img.img-rounded.img-thumbnail(src=book.img alt=book.img_desc style="height: 20vh")
                        else
                            img.img-rounded.img-thumbnail(src="/image/no_img.png", alt = "kein bild verfügbar" style="height: 20vh")
                    td
                        span #{book.title}
                    td
                        span #{book.author}
                    td
                        span #{book.publisher}
                    td
                        span #{book.isbn}
                    td
                        //- span #{book.typ}
                        if book.typ === 'E-Paper' || book.typ === 'E-Book'
                            button.btn(class="read" id=book._id) Lesen
                            br
                            //- todo maybe form with get to use session for better security instead of using event listener
                        else if book.typ === 'E-Video' || book.typ ===  'E-Audio'
                            button.btn(class="read" id=book._id) Abspielen
                            br
                        else
                            p #{book.standort}
                        button.btn(class="return" id=book._id) Zurückgeben
    script(src="/javascripts/lend.js")