extends ../layout

block content
    .row.mt-4
        h1 Ausleihen
        h4 Nutzer
        p
            strong Name:
            span  #{name}
        p
            strong Email:
            span  #{user}
        h4.mt-2 Buch
        .d-block.d-sm-none
            p
                strong Titel:
                span  #{book.title}
            p
                strong Autor:
                span  #{book.author}
            p
                strong ISBN:
                span  #{book.isbn}
        table.d-none.d-sm-block.table
            thead
                tr
                    th Titel
                    th Autor
                    th ISBN
            tbody
                tr
                    td #{book.title}
                    td #{book.author}
                    td #{book.isbn}
        .row.mt-4
        if can_be_rented
            form(method='post' action='/api/object/lend/'+book._id)
                button.btn.btn-primary(type='submit') Ausleihen
        else
            p.border-2.bg-warning.border-danger.rounded Dieses Werk ist bereits ausgeliehen, entweder handelt es sich nicht um ein E-Medium und kann so nicht mehrfach zur gleichen Zeit ausgeliehen werden oder du hast dieses Werk bereits ausgeliehen.