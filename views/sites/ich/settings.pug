mixin settings(user)
    h3 Einstellungen
    .row
        form(method="post" action="/api/user/update")
            h4 Profil:
            .row.d-sm-block.d-md-none
                .col-sm-12
                    span Anrede:
                    br
                    span #{user.salutation}
                    br
                    span Name:
                    br
                    input.form-control(value=user.lastName type="text" name="last_name")
                    br
                    span Vorname:
                    br
                    input.form-control(value=user.firstName type="text" name="fist_name")
            .row.d-none.d-md-block
                span Anrede:
                br
                span #{user.salutation}
                br
                span Name:
                br
                input.form-control(value=user.lastName type="text" name="last_name")
                br
                span Vorname:
                br
                input.form-control(value=user.firstName type="text" name="fist_name")
            hr.hr.mt-3
            h4 Authentifizierung:
            .row.d-sm-block.d-md-none
                .col-sm-12
                    span E-Mail:
                    br
                    span #{user.email}
                    br
                    span Passwort:
                    br
                    input.form-control(type="text" name="passwd")
            .row.d-none.d-md-block
                span E-Mail:
                br
                span #{user.email}
                br
                span Passwort:
                br
                input.form-control(type="text" name="passwd")
            button.mt-2.btn.btn-outline-dark#authentication(type="submit") Ã„ndern
            hr.hr.mt-3
        .d-grid.gap-2
            button.mt-2.btn.btn-outline-dark#clean(type="submit") Clean History
            button.mt-2.btn.btn-outline-dark#delete(type="submit") Delete
    script(src="/javascript/settings.js")

