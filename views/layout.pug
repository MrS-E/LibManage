doctype html
html
  head
    title="Bibliothek"
    link(rel='stylesheet', href='/stylesheets/style.css')
    //- https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link( rel="icon" href="/image/book.ico")
    //- https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js
    script(src='/javascript/bootstrap.js')
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="#")
        button.navbar-toggler(type="button"
          data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup" aria-expanded="false"
          aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse(id="navbarNavAltMarkup")
          .navbar-nav
            a.nav-link.active(aria-current="page" id="home" href="/") Home
            a.nav-link(id="liste" href="/liste") Liste
            a.nav-link(id="ich" href="/ich") Ich
        form.form-inline.my-2.my-lg-0(method="post" action="/api/user/logout")
          span.nav-text.text-white Angemeldet als #{user}
          button.btn.btn-outline-success.my-2.my-sm-0(type="submit" value="Abmelden" style="margin-right: 1vw; margin-left: 10px;") Abmelden

    script(src='/javascript/navbar.js')
    .container.mt-1
      //- TODO make multiple layouts for different devices
      block content

