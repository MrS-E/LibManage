extends head

block body
  body
    container-fluid
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container
        //- when removing container add .ms-2 to button.navbar-toggler and .collapse.navbar-collapse#navbarNavAltMarkup + add .me-2 to button.btn.btn-outline-success.my-2.my-sm-0 (+ maybe style="margin-right: 1vw; margin-left: 10px;")
        //- a.navbar-brand(href="#")
        button.navbar-toggler(type="button"
          data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup" aria-expanded="false"
          aria-label="Toggle navigation")
          span.navbar-toggler-icon
